<div class="video-view-container mdl-card mdl-cell mdl-cell--8-col-tablet mdl-shadow--2dp"
  data-defer-style="background-image: url('<%= videocontainer.manifest_json['thumbUri'] %>')">

  <a class="video-link" href="<%= video_path(videocontainer)  %>">

    <div class="video-heading video-title">
      <%= videocontainer.manifest_json["title"] %>
    </div>
    <div class="video-heading video-author">
      <span class="author-label"> <%= t('videos.revisions.video_property.author') %> </span>
      <span class="author-name"> <%= videocontainer.manifest_json["author"]["name"] %> </span>
    </div>
  </a>
</div>
