<!DOCTYPE html>
<html>
<head>
  <title>Achrails</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>    
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <span>Logged in as <strong><%= current_user.name %></strong></span>
<% else %>
<%= link_to "Sign in", user_omniauth_authorize_url(:learning_layers_oidc, protocol: 'https') %>
<% end %>

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<hr>

<%= yield %>

</body>
</html>
