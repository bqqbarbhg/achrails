<!DOCTYPE html>
<html>
<head>
  <title>Achrails</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>    
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <h3>Logged in as <%= current_user.name %></h3>
  <%= link_to(t(:sign_out), destroy_user_session_path, method: :delete) %>
<% end %>

<hr>

<%= yield %>

</body>
</html>
